import juego.*
import personajes.*

describe "tests del juego" {

    const enemigoEjemplo = new Enemigo(especie = esqueleto)

    test "Cuando el heroe recibe danio, a la vida se le resta el daño recibido menos la defensa" {
        hero.recibirDanio(10)
        assert.that(hero.vida() == 100 - (10 - hero.defensa()))
    }

    test "Cuando un enemigo recibe danio, a la vida se le resta el daño recibido menos la defensa" {
        enemigoEjemplo.recibirDanio(10)
        assert.that(enemigoEjemplo.vida() == 100 - (10 - enemigoEjemplo.especie().defensa()))
    }
}